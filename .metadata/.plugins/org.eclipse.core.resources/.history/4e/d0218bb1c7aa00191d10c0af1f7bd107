package org.grocery.inventory.items.item;

import org.grocery.inventory.items.itemtype.ItemType;
import org.grocery.inventory.items.itemtype.ItemTypeException;

/**
 * @author Manosivam
 *
 */
public class Item {

	int id;
	String name; 
	double mrp; 
	ItemType type;
	//TODO: Tax tax; 
	
	Item(String name, double mrp,String itemTypeName) throws ItemTypeException
	{
		if(name == null || mrp<0 || name.trim().isEmpty())
		this.name = name;
		this.mrp = mrp;
		this.type = new ItemType(itemTypeName);
	}
	
}
