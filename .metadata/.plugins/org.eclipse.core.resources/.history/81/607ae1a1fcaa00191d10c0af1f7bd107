package in.grocery.payments;

import in.grocery.customers.Card;

/**
 * @author Manosivam
 *
 */

//Payment is a standalone unit. It don't need to know about Customer or card. 
public class PaymentProcessor implements IPaymentProcessor{

	@Override
	public double processPayment(double billAmount, double cashPaid) {
		if(billAmount > cashPaid)
		{
			return -1;
		}
		else 
		{
			return cashPaid - billAmount;
		}
	}

	@Override
	public boolean processPayment(double billAmount, Card cardDetail, String pin) {
		
		return false;
	}

	
}
